<div class="card mb-3">
  <h2 class="card-header h4">
    Breeder Review #<%= breeder_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= breeder_review.description %></dd>
      <!-- Display description end -->

      <dt>Buyer</dt>
      <!-- Display buyer_id start -->
      <dd><%= breeder_review.buyer_id %></dd>
      <!-- Display buyer_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back breeder_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link breeder_review start -->
      <div class="col">
        <% if current_user_profile == @breeder_review.user %>
          <%= link_to edit_breeder_review_url(breeder_review), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link breeder_review end -->

      <!-- Delete link breeder_review start -->
      <div class="col">
        <% if current_user_profile == @breeder_review.user %>
          <%= link_to breeder_review, method: :delete, data: { confirm: "Do you really want to delete this breeder_review?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link breeder_review end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(breeder_review.updated_at) %> ago
  </div>
</div>
