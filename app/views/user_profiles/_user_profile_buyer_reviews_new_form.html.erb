<%= form_with(model: @breeder_review, local: true) do |f| %>
<!-- Form breeder_review end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for buyer_id start -->
  <!-- Input for buyer_id start -->
  <%= f.hidden_field :buyer_id, value: @user_profile.id %>
  <!-- Input for buyer_id end -->
  <!-- Label and input for buyer_id end -->

  <%= f.submit "Create breeder review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
