<div class="row">
  <div class="offset-md-3 col-md-6">
    <div class="card mb-3">
      <h5 class="card-header">
        Edit <%= resource_name.to_s.titleize %>
      </h5>

      <div class="card-body">
        <% was_validated = resource.errors.any? %>
        <% form_html_options = { method: :put, novalidate: true, class: "mb-3" } %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: form_html_options) do |f| %>

          <% if flash[:notice].present? %>
            <div class="alert alert-info" role="alert">
              <%= flash[:notice] %>
            </div>
          <% end %>

          <% if flash[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="form-group">
            <% email_was_invalid = resource.errors.include?(:email) %>

            <% email_class = "form-control" %>

            <% if was_validated %>
              <% if email_was_invalid %>
                <% email_class << " is-invalid" %>
              <% else %>
                <% email_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :email %>

            <%= f.email_field :email, autofocus: true, class: email_class %>

            <% if email_was_invalid %>
              <% resource.errors.full_messages_for(:email).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <small class="form-text text-muted">
                Currently awaiting confirmation for <%= resource.unconfirmed_email %>.
              </small>
            <% end %>
          </div>

          <div class="form-group">
            <% password_was_invalid = resource.errors.include?(:password) %>

            <% password_class = "form-control" %>

            <% if was_validated %>
              <% if password_was_invalid %>
                <% password_class << " is-invalid" %>
              <% else %>
                <% password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password %>

            <%= f.password_field :password, class: password_class, autocomplete: "off" %>

            <% if password_was_invalid %>
              <% resource.errors.full_messages_for(:password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              Leave blank if you don't want to change it.

              <% if @minimum_password_length %>
                <%= @minimum_password_length %> characters minimum.
              <% end %>
            </small>
          </div>

          <div class="form-group">
            <% password_confirmation_was_invalid = resource.errors.include?(:password_confirmation) %>

            <% password_confirmation_class = "form-control" %>

            <% if was_validated %>
              <% if password_confirmation_was_invalid %>
                <% password_confirmation_class << " is-invalid" %>
              <% else %>
                <% password_confirmation_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :password_confirmation %>

            <%= f.password_field :password_confirmation, class: password_confirmation_class, autocomplete: "off" %>

            <% if password_confirmation_was_invalid %>
              <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% current_password_was_invalid = resource.errors.include?(:current_password) %>

            <% current_password_class = "form-control" %>

            <% if was_validated %>
              <% if current_password_was_invalid %>
                <% current_password_class << " is-invalid" %>
              <% else %>
                <% current_password_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :current_password %>

            <%= f.password_field :current_password, class: current_password_class, autocomplete: "off" %>

            <% if current_password_was_invalid %>
              <% resource.errors.full_messages_for(:current_password).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>

            <small class="form-text text-muted">
              We need your current password to confirm your changes.
            </small>
          </div>


          <div class="form-group">
            <% username_was_invalid = resource.errors.include?(:username) %>

            <% username_class = "form-control" %>

            <% if was_validated %>
              <% if username_was_invalid %>
                <% username_class << " is-invalid" %>
              <% else %>
                <% username_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :username %>

            <%= f.text_field :username, :class => username_class, :placeholder => "Enter username" %>

            <% if username_was_invalid %>
              <% resource.errors.full_messages_for(:username).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% breeder_true_was_invalid = resource.errors.include?(:breeder_true) %>

            <% breeder_true_class = "form-control" %>

            <% if was_validated %>
              <% if breeder_true_was_invalid %>
                <% breeder_true_class << " is-invalid" %>
              <% else %>
                <% breeder_true_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :breeder_true %>

            <%= f.check_box :breeder_true, class: "#{breeder_true_class} col-sm-2" %>

            <% if breeder_true_was_invalid %>
              <% resource.errors.full_messages_for(:breeder_true).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% home_activity_level_was_invalid = resource.errors.include?(:home_activity_level) %>

            <% home_activity_level_class = "form-control" %>

            <% if was_validated %>
              <% if home_activity_level_was_invalid %>
                <% home_activity_level_class << " is-invalid" %>
              <% else %>
                <% home_activity_level_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :home_activity_level %>

            <%= f.number_field :home_activity_level, :class => home_activity_level_class, :placeholder => "Enter home activity level" %>

            <% if home_activity_level_was_invalid %>
              <% resource.errors.full_messages_for(:home_activity_level).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% children_present_was_invalid = resource.errors.include?(:children_present) %>

            <% children_present_class = "form-control" %>

            <% if was_validated %>
              <% if children_present_was_invalid %>
                <% children_present_class << " is-invalid" %>
              <% else %>
                <% children_present_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :children_present %>

            <%= f.check_box :children_present, class: "#{children_present_class} col-sm-2" %>

            <% if children_present_was_invalid %>
              <% resource.errors.full_messages_for(:children_present).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% cat_present_was_invalid = resource.errors.include?(:cat_present) %>

            <% cat_present_class = "form-control" %>

            <% if was_validated %>
              <% if cat_present_was_invalid %>
                <% cat_present_class << " is-invalid" %>
              <% else %>
                <% cat_present_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :cat_present %>

            <%= f.check_box :cat_present, class: "#{cat_present_class} col-sm-2" %>

            <% if cat_present_was_invalid %>
              <% resource.errors.full_messages_for(:cat_present).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="form-group">
            <% home_location_was_invalid = resource.errors.include?(:home_location) %>

            <% home_location_class = "form-control" %>

            <% if was_validated %>
              <% if home_location_was_invalid %>
                <% home_location_class << " is-invalid" %>
              <% else %>
                <% home_location_class << " is-valid" %>
              <% end %>
            <% end %>

            <%= f.label :home_location %>

            <%= f.text_field :home_location, :class => home_location_class, :placeholder => "Enter home location" %>

            <% if home_location_was_invalid %>
              <% resource.errors.full_messages_for(:home_location).each do |message| %>
                <div class="invalid-feedback d-flex">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <%= f.submit "Update", class: "btn btn-block btn-outline-primary" %>
        <% end %>

        <%= link_to "Back", :back, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="card-footer">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "btn btn-block btn-link", method: :delete %>
      </div>
    </div>
  </div>
</div>
