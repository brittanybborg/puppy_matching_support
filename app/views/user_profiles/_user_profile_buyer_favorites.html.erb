<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Buyer Favorites

    <a data-toggle="collapse" href="#user_profile_buyer_favorites_new_form">
      Add buyer favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user_profile.buyer_favorites.each do |buyer_favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to buyer_favorite, buyer_favorite %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_profile_buyer_favorites_new_form">
        <%= render partial: "user_profiles/user_profile_buyer_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
