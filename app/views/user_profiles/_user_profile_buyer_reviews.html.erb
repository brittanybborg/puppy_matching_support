<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Buyer Reviews

    <a data-toggle="collapse" href="#user_profile_buyer_reviews_new_form">
      Add breeder review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user_profile.buyer_reviews.each do |breeder_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to breeder_review, breeder_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_profile_buyer_reviews_new_form">
        <%= render partial: "user_profiles/user_profile_buyer_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
