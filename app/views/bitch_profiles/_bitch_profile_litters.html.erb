<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Litters

    <a data-toggle="collapse" href="#bitch_profile_litters_new_form">
      Add litter
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bitch_profile.litters.each do |litter| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to litter, litter %>

        <%= link_to litter, method: :delete, data: { confirm: "Do you really want to delete this litter" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bitch_profile_litters_new_form">
        <%= render partial: "bitch_profiles/bitch_profile_litters_new_form" %>
      </div>
    </div>

  </ul>
</div>
