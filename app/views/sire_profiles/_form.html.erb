<% was_validated = sire_profile.errors.any? %>

<%= form_with(model: sire_profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = sire_profile.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% sire_profile.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for photo start -->
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = sire_profile.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <!-- Input for photo start -->
    <%= f.text_field :photo, class: photo_class, placeholder: "Enter photo" %>
    <!-- Input for photo end -->
    <% if photo_was_invalid %>
      <% sire_profile.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for photo end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = sire_profile.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <!-- Input for description end -->
    <% if description_was_invalid %>
      <% sire_profile.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for description end -->
  <!-- Label and input for previous_litters start -->
  <div class="form-group">
    <% previous_litter_class = "form-control" %>
    <% previous_litter_was_invalid = sire_profile.errors.include?(:previous_litter) %>

    <% if was_validated %>
      <% if previous_litter_was_invalid %>
        <% previous_litter_class << " is-invalid" %>
      <% else %>
        <% previous_litter_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :previous_litters %>
    <!-- Input for previous_litters start -->
    <%= f.number_field :previous_litters, class: previous_litter_class, placeholder: "Enter previous litter" %>
    <!-- Input for previous_litters end -->
    <% if previous_litter_was_invalid %>
      <% sire_profile.errors.full_messages_for(:previous_litter).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for previous_litters end -->
  <!-- Label and input for age start -->
  <div class="form-group">
    <% age_class = "form-control" %>
    <% age_was_invalid = sire_profile.errors.include?(:age) %>

    <% if was_validated %>
      <% if age_was_invalid %>
        <% age_class << " is-invalid" %>
      <% else %>
        <% age_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :age %>
    <!-- Input for age start -->
    <%= f.number_field :age, class: age_class, placeholder: "Enter age" %>
    <!-- Input for age end -->
    <% if age_was_invalid %>
      <% sire_profile.errors.full_messages_for(:age).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for age end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
