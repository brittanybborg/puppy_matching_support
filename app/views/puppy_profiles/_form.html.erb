<% was_validated = puppy_profile.errors.any? %>

<%= form_with(model: puppy_profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = puppy_profile.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% litter_class = "form-control" %>
    <% litter_was_invalid = puppy_profile.errors.include?(:litter) %>

    <% if was_validated %>
      <% if litter_was_invalid %>
        <% litter_class << " is-invalid" %>
      <% else %>
        <% litter_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :litter_id %>
    <%= f.collection_select :litter_id, Litter.all, :id, :to_s, {}, class: "form-control" %>
    <% if litter_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:litter).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% alpha_true_class = "form-check-input" %>
    <% alpha_true_was_invalid = puppy_profile.errors.include?(:alpha_true) %>

    <% if was_validated %>
      <% if alpha_true_was_invalid %>
        <% alpha_true_class << " is-invalid" %>
      <% else %>
        <% alpha_true_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :alpha_true, class: "form-check-label" do %>
      <%= f.check_box :alpha_true, class: alpha_true_class %> Alpha true
    <% end %>
    <% if alpha_true_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:alpha_true).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% runt_true_class = "form-check-input" %>
    <% runt_true_was_invalid = puppy_profile.errors.include?(:runt_true) %>

    <% if was_validated %>
      <% if runt_true_was_invalid %>
        <% runt_true_class << " is-invalid" %>
      <% else %>
        <% runt_true_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :runt_true, class: "form-check-label" do %>
      <%= f.check_box :runt_true, class: runt_true_class %> Runt true
    <% end %>
    <% if runt_true_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:runt_true).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% activity_level_class = "form-control" %>
    <% activity_level_was_invalid = puppy_profile.errors.include?(:activity_level) %>

    <% if was_validated %>
      <% if activity_level_was_invalid %>
        <% activity_level_class << " is-invalid" %>
      <% else %>
        <% activity_level_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :activity_level %>
    <%= f.select :activity_level, options_for_select(PuppyProfile.activity_levels.keys), {}, class: "form-control" %>
    <% if activity_level_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:activity_level).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = puppy_profile.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
    <% if photo_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = puppy_profile.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% puppy_profile.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
