<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Buyer Favorites

    <a data-toggle="collapse" href="#puppy_profile_buyer_favorites_new_form">
      Add buyer favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @puppy_profile.buyer_favorites.each do |buyer_favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to buyer_favorite, buyer_favorite %>

        <%= link_to buyer_favorite, method: :delete, data: { confirm: "Do you really want to delete this buyer_favorite" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="puppy_profile_buyer_favorites_new_form">
        <%= render partial: "puppy_profiles/puppy_profile_buyer_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
