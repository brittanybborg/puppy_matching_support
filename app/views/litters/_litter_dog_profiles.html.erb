<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dog Profiles

    <a data-toggle="collapse" href="#litter_dog_profiles_new_form">
      Add puppy profile
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @litter.dog_profiles.each do |puppy_profile| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to puppy_profile, puppy_profile %>

        <%= link_to puppy_profile, method: :delete, data: { confirm: "Do you really want to delete this puppy_profile" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="litter_dog_profiles_new_form">
        <%= render partial: "litters/litter_dog_profiles_new_form" %>
      </div>
    </div>

  </ul>
</div>
